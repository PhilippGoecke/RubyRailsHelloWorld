<div class="d-flex flex-column flex-shrink-0 p-3 bg-body-tertiary" style="width: 280px;">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
    <svg class="bi pe-none me-2" width="40" height="32" aria-hidden="true"><use xlink:href="#bootstrap"></use></svg>
    <span class="fs-4">Sidebar</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <%= link_to "Home", root_path, class: "nav-link link-body-emphasis" + (current_page?(root_path) ? " active" : "") %>
    </li>
<% if account_signed_in? %>
    <li class="nav-item">
      <%= link_to "Healthcheck", rails_health_check_path, class: "nav-link link-body-emphasis" %>
    </li>
<% end %>
    <li class="nav-item">
      <%= link_to "Test", welcome_index_path(name: "Test"), class: "nav-link link-body-emphasis" + (current_page?(welcome_index_path) ? " active" : "") %>
    </li>
    <li class="nav-item">
      <%= link_to "Impressum", "/impressum.html", class: "nav-link link-body-emphasis" + (current_page?("/impressum.html") ? " active" : "") %>
    </li>
  </ul>
  <hr>
  <div class="dropdown">
    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person"></i><strong>User</strong></a>
    <ul class="dropdown-menu text-small shadow">
<% if account_signed_in? %>
      <li><%= link_to "Profile", edit_account_registration_path, class: "dropdown-item" %></li>
      <li><a class="dropdown-item" href="#">Settings</a></li>
      <li><%= link_to "Cancel Account", cancel_account_registration_path, class: "dropdown-item" %></li>
<% end %>
      <li><hr class="dropdown-divider"></li>
<% if account_signed_in? %>
      <li><%= link_to "Logout", destroy_account_session_path, method: :delete, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
<% else %>
      <li><%= link_to "Sign in", new_account_session_path, class: "dropdown-item" %></li>
      <li><%= link_to "Register", new_account_registration_path, class: "dropdown-item" %></li>
<% end %>
    </ul>
  </div>
</div> 
